<%#
Local variables:
* grid - instance of Datagrid
* assets - Array of database Entities
* options - passed options Hash
%>
<%#= content_tag :table, options[:html] do %>
  <% if assets.empty? %>
    <tr><td class="noresults" colspan="100%"><center><%= I18n.t 'datagrid.no_results', :default => '&mdash;&mdash;'.html_safe %></center></td></tr>
  <% else %>
    <%= datagrid_rows(grid, assets, options) %>
  <% end %>
  <tr>
    <td class="bottom-line" colspan="7"></td>
  </tr>
<%# end %>
