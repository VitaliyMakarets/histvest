
<h1><%= I18n.t("locations.listing")%></h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <tr>
    <th><%= I18n.t("locations.address")%></th>
    <th><%= I18n.t("locations.latitude")%></th>
    <th><%= I18n.t("locations.longitude")%></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.address %></td>
    <td><%= location.latitude %></td>
    <td><%= location.longitude %></td>
  </tr>
<% end %>
</table>


<%= link_to I18n.t("locations.new_location"), new_location_path %>

